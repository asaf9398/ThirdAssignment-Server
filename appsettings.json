{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "requestsLogger",
        "Args": {
          "path": ".\\logs\\requests.log"
        }
      },
      {
        "Name": "toDoLogger",
        "Args": {
          "path": ".\\logs\\todos.log"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
